@model IEnumerable<Employee>

<h1>All Employees</h1>

@using (Html.BeginForm())
{
    <div class="input-group">
        @Html.TextBox("SearchByName", null, new { @class="form-control", @placeholder="Search By Employee Name..."})
        <input type="submit" value="Search" class="btn btn-outline-success">
        <a asp-action="Create" class="btn btn-outline-primary">Create New Employee</a>

    </div>
}


<table class="table">
    <thead>
        <tr>
            <th>
               @Html.ActionLink("Employee number", "Index",new {sortField="EmployeeNumber", currentSortField=ViewBag.SortField, SortDirection=ViewBag.SortDictionary})
            </th>

                  <th>
               @Html.ActionLink("Employee Name", "Index",new {sortField="EmployeeName", currentSortField=ViewBag.SortField, SortDirection=ViewBag.SortDictionary})
            </th>
                  <th>
               @Html.ActionLink("Date of Birth", "Index",new {sortField="DOB", currentSortField=ViewBag.SortField, SortDirection=ViewBag.SortDictionary})
            </th>
                  <th>
               @Html.ActionLink("Hiring Date", "Index",new {sortField="HiringDate", currentSortField=ViewBag.SortField, SortDirection=ViewBag.SortDictionary})
            </th>
                  <th>
               @Html.ActionLink("Gross Salary", "Index",new {sortField="GrossSalary", currentSortField=ViewBag.SortField, SortDirection=ViewBag.SortDictionary})
            </th>
                  <th>
               @Html.ActionLink("Net Salary", "Index",new {sortField="NetSalary", currentSortField=ViewBag.SortField, SortDirection=ViewBag.SortDictionary})
            </th>
                  <th>
               @Html.ActionLink("Department", "Index",new {sortField="Department", currentSortField=ViewBag.SortField, SortDirection=ViewBag.SortDictionary})
            </th>

        </tr>
    </thead>  
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor( modelItem => item.EmployeeNumber)
            </td>
              <td>
                @Html.DisplayFor( modelItem => item.EmployeeName)
            </td>
              <td>
                @Html.DisplayFor( modelItem => item.DOB)
            </td>
              <td>
                @Html.DisplayFor( modelItem => item.HiringDate)
            </td>
              <td>
                @Html.DisplayFor( modelItem => item.GrossSalary)
            </td>
              <td>
                @Html.DisplayFor( modelItem => item.NetSalary)
            </td>
                <td>
                @Html.DisplayFor( modelItem => item.DepartmentName)
            </td>
            <td>
              @Html.ActionLink("Edit","Edit", new {id= item.EmployeeId})
              @Html.ActionLink("Delete","Delete", new {id= item.EmployeeId}, new { onclick= "return confirm('Are you sure you want to delete this employee?');"})
              </td>
        </tr>
        }
    </tbody>
</table>